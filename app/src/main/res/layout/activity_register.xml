<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <EditText
        android:id="@+id/etEmailReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="236dp"
        android:ems="10"
        android:hint="@string/et_EmailReg"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="145dp" />

    <EditText
        android:id="@+id/etPasswordReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="225dp"
        android:ems="10"
        android:hint="@string/et_PasswordReg"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="240dp" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:onClick="registro"
        android:text="@string/btn_RegistrarUsuario"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="357dp" />

    <EditText
        android:id="@+id/etNombreReg"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="@string/et_NombreReg"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp" />

    <ImageView
        android:id="@+id/imgvFotoPerfil"
        android:layout_width="132dp"
        android:layout_height="143dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="23dp"
        android:onClick="OnClick"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp" />

    <EditText
        android:id="@+id/etApellidoReg"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etNombreReg"
        android:layout_marginTop="113dp"
        android:ems="10"
        android:hint="@string/et_ApellidoReg"
        android:inputType="textPersonName"
        android:layout_alignLeft="@+id/etNombreReg" />

    <EditText
        android:id="@+id/etPasswordRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="159dp"
        android:ems="10"
        android:hint="@string/et_PasswordRepeat"
        android:inputType="textPassword" />
    app:srcCompat="@drawable/addimage"/>
</RelativeLayout>